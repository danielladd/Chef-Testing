lithograph.database.driver=com.microsoft.sqlserver.jdbc.SQLServerDriver
# When configuring your application, please specify a more detailed applicationName property value
lithograph.database.url=jdbc:sqlserver://SQLVM03;databaseName=<%= node[:chub_lithograph][:db_name] %>;integratedSecurity=false;trustServerCertificate=true;authenticationScheme=JavaKerberos;applicationName=DSM

# Leave blank to use Windows Authentication (requires native library on path)
# See http://coyote/mediawiki/index.php/Microsoft_JDBC_Driver
lithograph.database.user=<%= node[:chub_lithograph][:db_user] %>
lithograph.database.password=<%= node[:chub_lithograph][:db_pass] %>

# Should be false in production
lithograph.showSql=false
# Should be false in production
lithograph.formatSql=false
# Should be false in production
lithograph.generateDdl=false

# Database Configurations
# c3p0 is very asynchronous. Slow JDBC operations are generally performed by helper threads that don't hold contended locks. Spreading these operations over multiple threads can significantly improve performance by allowing multiple operations to be performed simultaneously. (Default: 3)
lithograph.database.maxIdle=8
lithograph.database.maxActive=8
lithograph.database.minIdle=4
lithograph.database.maxWait=5000
lithograph.database.removeAbandoned=true
lithograph.database.removeAbandonedTimeout=60
lithograph.database.defaultAutoCommit=true
lithograph.database.defaultReadOnly=false
lithograph.database.validationQuery=select 1
lithograph.database.testOnBorrow=true
lithograph.database.testOnReturn=false
lithograph.database.testWhileIdle=false
lithograph.database.timeBetweenEvictionRunsMillis=-1
lithograph.database.numTestsPerEvictionRun=3
lithograph.database.minEvictableIdleTimeMillis=1800000

