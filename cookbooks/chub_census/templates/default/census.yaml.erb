# /etc/census/census.yaml
#
# Generated by Chef

plazaUrl: <%= node[:chub_census][:plaza_url] %>

<% if node[:graphite] -%>
metrics:
  reporters:
    - type: hub-graphite
      <% if node[:graphite][:host] -%>
      host: <%= node[:graphite][:host] %>
      <% end -%>
      <% if node[:graphite][:port] -%>
      port: <%= node[:graphite][:port] %>
      <% end -%>
      <% if node.chef_environment != "_default" -%>
      environment: <%= node.chef_environment %>
      <% end -%>

<% end -%>
<% if node[:chub_census] && node[:chub_census][:database] -%>
database:
  url: <%= node[:chub_census][:database][:url] %>
  user: <%= node[:chub_census][:database][:user] %>
  password: <%= node[:chub_census][:database][:password] %>

<% end -%>
server:
  requestLog:
    appenders:
      - type: file
        currentLogFilename: /var/log/census/census-requests.log
        archivedLogFilenamePattern: /var/log/census/census-requests-%d.log.gz

logging:
  level: WARN
  loggers:
    census: INFO
  appenders:
    - type: file
      currentLogFilename: /var/log/census/census.log
      archivedLogFilenamePattern: /var/log/census/census-%d.log.gz
