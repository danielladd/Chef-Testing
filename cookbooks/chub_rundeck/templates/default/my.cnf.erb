[client]
<% if node[:mysql][:port] %>
port                           = <%= node[:mysql][:port] %>
<% end %>
<% if @socket_file %>
socket                         = <%= @socket_file %>
<% end %>

[mysqld_safe]
socket                         = <%= @socket_file %>
<% if @nice %>
nice                           = 0
<% end %>

[mysqld]
user                           = mysql
pid-file                       = <%= @pid_file %>
socket                         = <%= @socket_file %>
bind-address                   = <%= node[:mysql][:bind_address] %>
server-id                      = <%= node[:mysql][:server_id] %>
log_bin                        = <%= node[:mysql][:log_bin] %> 
binlog_do_db                   = <%= node[:mysql][:database_to_replicate] %>
datadir                        = <%= node[:mysql][:data_dir] %> 

<% if node[:mysql][:slave] %>
relay-log                      = <%= node[:mysql][:relay_log] %>
<% end %>

<% if node[:mysql][:port] %>
port                           = <%= node[:mysql][:port] %>
<% end %>
<% if @basedir %>
basedir                        = <%= @base_dir %>
<% end %>

<% if @tmpdir %>
tmpdir                         = /tmp
<% end %>
<% if @lc_messages_dir %>
lc-messages-dir                = <%= @lc_messages_dir %>
<% end %>

[mysql]
<% if @include_dir %>
!includedir <%= @include_dir %>
<% end %>
