setuid castle
setgid castle
chdir /var/castle
exec java -server -d64 -Xms<%= node["chub-castle"]["java_heap_size"] %> -Xmx<%= node["chub-castle"]["java_heap_size"] %> -Dcontainer.ssl.keyStore=/etc/castle/keystore.jks -Dcontainer.ssl.keyStorePassword="<%= node["chub-castle"]["keystore_password"] %>" -Dcontainer.ssl.trustStore=/etc/castle/truststore.jks -Dcontainer.ssl.trustStorePassword="<%= node["chub-castle"]["truststore_password"] %>" -Djava.net.preferIPv4Stack=true -Dapplication.properties=/etc/castle/castle.properties -jar /opt/castle/castle.war run
respawn
start on runlevel [2345]
stop on runlevel [016]
