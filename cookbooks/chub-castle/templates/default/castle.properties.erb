host.name=<%= @castle_host_name %>
vault.url=<%= node["chub-castle"]["vault.url"] %>
<% if node["graphite"] -%>
 <% if node["graphite"]["host"] -%>
graphite.host=<%= node["graphite"]["host"] %>
 <% end -%>
 <% if node.chef_environment != "_default" -%>
graphite.env=<%= node.chef_environment %>
 <% end -%>
<% end -%>	
<% if node["chub-castle"] && node["chub-castle"]["database"] -%>
database.server=<%= node["chub-castle"]["database"]["server"] %>
database.name=<%= node["chub-castle"]["database"]["name"] %>
database.user=<%= node["chub-castle"]["database"]["user"] %>
database.pass=<%= node["chub-castle"]["database"]["pass"] %>
<% end -%>
database.dialect=org.hibernate.dialect.SQLServer2008Dialect
database.driverClass=com.microsoft.sqlserver.jdbc.SQLServerDriver
database.pool.minSize=6
database.pool.maxSize=18
database.pool.maxWait=10000
database.pool.maxIdleTime=120
database.pool.acquireIncrement=6
database.pool.idleConnectionTestPeriod=30
database.pool.connectionHealthQuery=select 1
database.pool.acquireRetryAttempts=5
database.pool.acquireRetryDelay=2000
