server {
	listen		80;
	server_name	www.<%= @site %>.nexus.commercehub.com;
	rewrite ^/(.*) http://<%= @site %>.nexus.commercehub.com/$1 permanent;

}

server {
	listen		80;
	server_name	<%= @site %> <%= @site %>.nexus.commercehub.com;

	access_log	/var/log/nginx/<%= @site %>.access.log;
	error_log	/var/log/nginx/<%= @site %>.error.log;

	location / {
		root	/var/www/<%= @site %>;
		index	<%= @http_index %>;

		location ~ \.php$ {
			fastcgi_split_path_info ^(.+\.php)(/.+)$;
		#	# NOTE: You should have "cgi.fix_pathinfo = 0;" in php.ini
		#	# With php5-cgi alone:
		#	fastcgi_pass 127.0.0.1:9000;
		#	# With php5-fpm:
			fastcgi_pass <%= @fcgi_port %>;
			fastcgi_index index.php;
			include fastcgi_params;

		}
		
	}

	

}