server {
	listen		80;
	server_name	<%= @site %> <%= @site %>.nexus.commercehub.com;
	root		<%= @site_path %>;
}


server {
	listen		80;
	server_name	www.<%= @site %>.nexus.commercehub.com;
	rewrite ^/(.*) http://<%= @site %>.nexus.commercehub.com/$1 permanent;

}

server {
	listen		80;
	server_name	<%= @site %> <%= @site %>.nexus.commercehub.com;

	access_log	/var/log/nginx/styleguide.access.log;
	error_log	/var/log/nginx/styleguide.error.log;

	location / {
		root	/var/www/styleguide;
		index	index.html;

	}

}