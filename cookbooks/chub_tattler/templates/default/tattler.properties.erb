# Leave blank to use Windows Authentication (requires native library on path)
# See http://coyote/mediawiki/index.php/Microsoft_JDBC_Driver
tattler.database.driver=com.microsoft.sqlserver.jdbc.SQLServerDriver
tattler.database.url=jdbc:sqlserver://<%= node[:chub_tattler][:db][:server] %>;databaseName=<%= node[:chub_tattler][:db][:name] %>;integratedSecurity=false;trustServerCertificate=true;authenticationScheme=JavaKerberos;applicationName=Tattler
tattler.database.user=<%= node[:chub_tattler][:db][:userName] %>
tattler.database.password=<%= node[:chub_tattler][:db][:pass] %>

# Should be false in production
tattler.showSql=<%= node[:chub_tattler][:db][:showSql] %>
# Should be false in production
tattler.formatSql=<%= node[:chub_tattler][:db][:formatSql] %>
# Should be false in production
tattler.generateDdl=<%= node[:chub_tattler][:db][:generateDdl] %>

# Database Configurations
# c3p0 is very asynchronous. Slow JDBC operations are generally performed by helper threads that don't hold contended locks. Spreading these operations over multiple threads can significantly improve performance by allowing multiple operations to be performed simultaneously. (Default: 3)
tattler.database.maxIdle=<%= node[:chub_tattler][:db][:maxIdle] %>
tattler.database.maxActive=<%= node[:chub_tattler][:db][:maxActive] %>
tattler.database.minIdle=<%= node[:chub_tattler][:db][:minIdle] %>
tattler.database.maxWait=<%= node[:chub_tattler][:db][:maxWait] %>
tattler.database.removeAbandoned=<%= node[:chub_tattler][:db][:removeAbandoned] %>
tattler.database.removeAbandonedTimeout=<%= node[:chub_tattler][:db][:removeAbandonedTimeout] %>
tattler.database.defaultAutoCommit=<%= node[:chub_tattler][:db][:defaultAutoCommit] %>
tattler.database.defaultReadOnly=<%= node[:chub_tattler][:db][:defaultReadOnly] %>
tattler.database.validationQuery=<%= node[:chub_tattler][:db][:validationQuery] %>
tattler.database.testOnBorrow=<%= node[:chub_tattler][:db][:testOnBorrow] %>
tattler.database.testOnReturn=<%= node[:chub_tattler][:db][:testOnReturn] %>
tattler.database.testWhileIdle=<%= node[:chub_tattler][:db][:testWhileIdle] %>
tattler.database.timeBetweenEvictionRunsMillis=<%= node[:chub_tattler][:db][:timeBetweenEvictionRunsMillis] %>
tattler.database.numTestsPerEvictionRun=<%= node[:chub_tattler][:db][:numTestsPerEvictionRun] %>
tattler.database.minEvictableIdleTimeMillis=<%= node[:chub_tattler][:db][:minEvictableIdleTimeMillis] %>

