tattler.database.driver=com.microsoft.sqlserver.jdbc.SQLServerDriver
# When configuring your application, please specify a more detailed applicationName property value
tattler.database.url=jdbc:sqlserver://SQLVM03;databaseName=<%= node[:chub_tattler][:db_name] %>;integratedSecurity=false;trustServerCertificate=true;authenticationScheme=JavaKerberos;applicationName=DSM

# Leave blank to use Windows Authentication (requires native library on path)
# See http://coyote/mediawiki/index.php/Microsoft_JDBC_Driver
tattler.database.user=<%= node[:chub_tattler][:db_user] %>
tattler.database.password=<%= node[:chub_tattler][:db_pass] %>

# Should be false in production
tattler.showSql=false
# Should be false in production
tattler.formatSql=false
# Should be false in production
tattler.generateDdl=false

# Database Configurations
# c3p0 is very asynchronous. Slow JDBC operations are generally performed by helper threads that don't hold contended locks. Spreading these operations over multiple threads can significantly improve performance by allowing multiple operations to be performed simultaneously. (Default: 3)
tattler.database.maxIdle=8
tattler.database.maxActive=8
tattler.database.minIdle=4
tattler.database.maxWait=5000
tattler.database.removeAbandoned=true
tattler.database.removeAbandonedTimeout=60
tattler.database.defaultAutoCommit=true
tattler.database.defaultReadOnly=false
tattler.database.validationQuery=select 1
tattler.database.testOnBorrow=true
tattler.database.testOnReturn=false
tattler.database.testWhileIdle=false
tattler.database.timeBetweenEvictionRunsMillis=-1
tattler.database.numTestsPerEvictionRun=3
tattler.database.minEvictableIdleTimeMillis=1800000

