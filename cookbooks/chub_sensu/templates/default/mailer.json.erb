{
  "mailer": {
    "admin_gui": "<%= node[:chub_sensu][:admin_gui_url] %>",
    "mail_from": "<%= node[:chub_sensu][:email][:sender] %>",
    "mail_to": "<%= node[:chub_sensu][:email][:recipient] %>",
    "smtp_address": "<%= node[:chub_sensu][:email][:smtp_server] %>",
    "smtp_port": "<%= node[:chub_sensu][:email][:smtp_port] %>",
    "smtp_domain": "<%= node[:chub_sensu][:email][:smtp_domain] %>"
    <% if node[:chub_sensu][:email][:subscriptions_mail_to] %> 
        ,"subscriptions": {
            <% node[:chub_sensu][:email][:subscriptions_mail_to].each do |k,v| %>
                <% if node[:chub_sensu][:email][:subscriptions_mail_to].keys[0] != k -%>,<% end%>"<%= k -%>": {
                    "mail_to": "<%= v -%>"
            }
        <% end %>
        }
    <% end %>
  }
}
