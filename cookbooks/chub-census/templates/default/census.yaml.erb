# Generated by Chef

<% if node["graphite"] -%>
metrics:
  reporters:
    - type: hub-graphite
      <% if node["graphite"]["host"] -%>
      host: <%= node["graphite"]["host"] %>
      <% end -%>
      <% if node["graphite"]["port"] -%>
      port: <%= node["graphite"]["port"] %>
      <% end -%>
      <% if node.chef_environment != "_default" -%>
      environment: <%= node.chef_environment %>
      <% end -%>

<% end -%>
<% if node["chub-census"] && node["chub-census"]["database"] -%>
database:
  url: <%= node["chub-census"]["database"]["url"] %>
  user: <%= node["chub-census"]["database"]["user"] %>
  password: <%= node["chub-census"]["database"]["password"] %>

<% end -%>
server:
  requestLog:
    appenders:
      - type: file
        currentLogFilename: /var/log/census/census-requests.log
        archivedLogFilenamePattern: /var/log/census/census-requests-%d.log.gz

logging:
  level: WARN
  loggers:
    census: INFO
  appenders:
    - type: file
      currentLogFilename: /var/log/census/census.log
      archivedLogFilenamePattern: /var/log/census/census-%d.log.gz
