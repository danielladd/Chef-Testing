# /etc/census/census.yml
#
# Generated by Chef

# HTTP-specific options.
http:

  # HTTP request log settings
  requestLog:

    # Settings for logging to stdout.
    console:

      # If true, write log statements to stdout.
      enabled: false

    # Settings for logging to a file.
    file:

      # If true, write log statements to a file.
      enabled: true

      # The file to which statements will be logged.
      currentLogFilename: /var/log/census/census-requests.log

      # When the log file rolls over, the file will be archived to census-requests-2012-03-15.log.gz,
      # census-requests.log will be truncated, and new statements written to it.
      archivedLogFilenamePattern: /var/log/census/census-requests-%d.log.gz

# Logging settings.
logging:

  # The default level of all loggers. Can be OFF, ERROR, WARN, INFO, DEBUG, TRACE, or ALL.
  level: WARN

  # Logger-specific levels.
  loggers:
    census: INFO

  # Settings for logging to stdout.
  console:

    # If true, write log statements to stdout.
    enabled: false

  # Settings for logging to a file.
  file:

    # If true, write log statements to a file.
    enabled: true

    # The file to which statements will be logged.
    currentLogFilename: /var/log/census/census.log

    # When the log file rolls over, the file will be archived to census-2012-03-15.log.gz,
    # census.log will be truncated, and new statements written to it.
    archivedLogFilenamePattern: /var/log/census/census-%d.log.gz
