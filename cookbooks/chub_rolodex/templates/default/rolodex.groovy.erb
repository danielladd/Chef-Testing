security {
    shiro {
        cas {
            serverUrl = "<%= node[:slm][:sso][:castle] %>"
            serviceUrl = "<%= node[:slm][:rolodex][:baseUrl] %>/shiro-cas"
            failureUrl = "<%= node[:slm][:rolodex][:baseUrl] %>/application/invalidSession"
            //loginUrl = "<%= node[:slm][:rolodex][:baseUrl] %>/application/invalidSession"
        }
    }
}

rolodex {
    url = "<%= node[:slm][:rolodex][:baseUrl] %>"
    ordersteam {
        app {
            id = "<%= node[:slm][:ordersteam][:app][:id] %>"
            name = "<%= node[:slm][:ordersteam][:app][:name] %>"
        }
    }
}

oddrest {
    url = "<%= node[:slm][:odd_service][:baseUrl] %>"
}

apartment {
    url = "<%= node[:slm][:apartment][:baseUrl] %>"
}

sso {
    vault_url = "<%= node[:slm][:sso][:vault] %>"
    census_url = "<%= node[:slm][:sso][:census] %>"
    castle_url = "<%= node[:slm][:sso][:castle] %>"
    plaza_url = "<%= node[:slm][:sso][:plaza] %>"
}

yui {
    filter = "<%= node[:chub_rolodex][:yui][:filter] %>"
    combine = <%= node[:chub_rolodex][:yui][:combine] %>
    url = "<%= node[:chub_rolodex][:yui][:url] %>"
}

metrics {
    graphiteHost = "<%= node[:slm][:graphite][:host] %>"
    graphitePort = <%= node[:slm][:graphite][:port] %>
    environment = "<%= node.chef_environment %>"
}

hazelcast {
    group = "<%= node[:chub_rolodex][:hazelcast][:group] %>"
    password = "<%= node[:chub_rolodex][:hazelcast][:password] %>"
    <% if node[:chub_rolodex][:hazelcast][:network_port] -%>
    networkPort = <%= node[:chub_rolodex][:hazelcast][:network_port] %>
    <% end -%>
    <% if node[:chub_rolodex][:hazelcast][:multicast_group] -%>
    multicastGroup = "<%= node[:chub_rolodex][:hazelcast][:multicast_group] %>"
    <% end -%>
    <% if node[:chub_rolodex][:hazelcast][:multicast_port] -%>
    multicastPort = <%= node[:chub_rolodex][:hazelcast][:multicast_port] %>
    <% end -%>
    <% if node[:chub_rolodex][:hazelcast][:backup_count] -%>
    backupCount = <%= node[:chub_rolodex][:hazelcast][:backup_count] %>
    <% end -%>
    <% if node[:chub_rolodex][:hazelcast][:minimum_member_count] -%>
    minimumMemberCount = "<%= node[:chub_rolodex][:hazelcast][:minimum_member_count] %>"
    <% end -%>
}

grails {
    mail {
        host = "<%= node[:chub_rolodex][:mail_server] %>"
        grails.mail.default.from = "customersupport@commercehub.com"
    }
}