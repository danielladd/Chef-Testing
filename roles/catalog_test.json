{
  "name": "catalog_test",
  "description": "A linux machine running catalog of controls (in development)",
  "default_attributes": {
    "chub_mc_app": {
      "port": "9400",
      "app_name": "catalog",
      "jar_file_url": "http://artifactory01/artifactory/simple/inteng-release/catalog/0.1/catalogtest.jar"
    },
    "ulimit": {
      "users": {
        "mongodb": {
          "filehandle_limit": 64000,
          "process_limit": 32000,
          "memory_limit": "unlimited"
        },
        "root": {
          "filehandle_limit": 64000,
          "process_limit": 32000,
          "memory_limit": "unlimited"
        }
      }
    },
    "mongodb": {
      "enable_rest": true,
      "dbpath": "/data/db"
    }
  },
  "run_list": [
    "recipe[base]",
    "recipe[ulimit]",
    "recipe[mongodb::10gen_repo]",
    "recipe[mongodb]",
    "recipe[chub_mc_app]"
  ]
}